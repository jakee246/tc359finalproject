<%= simple_form_for @article, 
 wrapper: :inline_form,
 html: {class: 'form-horizontal'},
   wrapper: :horizontal_form,
  wrapper_mappings: {
    title: :horizontal_file_input,
    boolean: :horizontal_boolean
 } do |f| %>
  <%= f.error_notification %>
 

  <%= f.input :title  %>
  <%= f.input :text %>
   

  <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit %>
  </div>
 
<% end %>